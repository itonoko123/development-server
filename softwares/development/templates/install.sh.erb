#!/bin/sh

export http_proxy=""

cd /var/lib/redmine-1.4.2

bundle install --without rmagick postgresql mysql development test

rake generate_session_store

RAILS_ENV=production rake db:migrate

tar zxf /var/lib/redmine_hudson.tar.gz -C /var/lib/redmine-1.4.2/vendor/plugins

bundle install --without rmagick postgresql mysql development test

rake db:migrate_plugins RAILS_ENV=production

rake redmine:load_default_data REDMINE_LANG=ja RAILS_ENV=production

ruby /var/lib/redmine-1.4.2/script/runner -e production /var/lib/redmine-1.4.2/createdata

ruby script/server -d -e production -p <%= redmine_port %>
