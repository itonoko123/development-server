#!/bin/sh

export http_proxy=""

cd /var/lib/redmine-1.4.2

bundle install --without rmagick postgresql mysql development test

gem install redmine_client

rake generate_secret_token

RAILS_ENV=production rake db:migrate

tar zxf /var/lib/redmine_hudson.tar.gz -C /var/lib/redmine-1.4.2/vender/plugins

bundle install --without rmagick postgresql mysql development test

rake db:migrate_plugins RAILS_ENV=production

rake redmine:load_default_data RAILS_ENV=production

script/rails s -d -e production -p <%= redmine_port %>
