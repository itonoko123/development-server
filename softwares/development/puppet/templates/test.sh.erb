#!/bin/bash

curl --head http://<%= gerrit %>:<%= gerrit_port %>
if [ $? != 0 ]; then
    echo "Service gerrit is not started."
    exit 1
fi

curl --head http://<%= jenkins %>:<%= jenkins_port %>
if [ $? != 0 ]; then
    echo "Service jenkins is not started."
    exit 1
fi

curl --head http://<%= redmine %>:<%= redmine_port %>
if [ $? != 0 ]; then
    echo "Service redmine is not started."
    exit 1
fi

ruby /var/lib/redminec.rb

echo "Test finished. It is OK."
